{
  "name": "@synckit/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for SyncKit - Production-grade local-first sync (58KB gzipped)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./lite": {
      "types": "./dist/index-lite.d.ts",
      "import": "./dist/index-lite.mjs",
      "require": "./dist/index-lite.js"
    },
    "./react": {
      "types": "./dist/adapters/react.d.ts",
      "import": "./dist/adapters/react.mjs",
      "require": "./dist/adapters/react.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/index-lite.ts src/adapters/react.tsx --format cjs,esm --dts --clean && npm run copy-wasm",
    "copy-wasm": "npm run copy-wasm-variants && npm run copy-wasm-to-dist",
    "copy-wasm-variants": "node scripts/copy-wasm-variants.js",
    "copy-wasm-to-dist": "node scripts/copy-wasm-to-dist.js",
    "dev": "tsup src/index.ts src/index-lite.ts src/adapters/react.tsx --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sync",
    "crdt",
    "local-first",
    "real-time",
    "collaboration",
    "offline-first",
    "typescript",
    "wasm"
  ],
  "author": "Daniel Ngugi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dancode-188/synckit.git",
    "directory": "sdk"
  },
  "files": [
    "dist",
    "wasm",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0"
  },
  "dependencies": {}
}
