{
  "name": "@synckit-js/sdk",
  "version": "0.1.1",
  "description": "Production-ready local-first sync with rich text editing, undo/redo, live cursors, and framework adapters for React, Vue, and Svelte",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./lite": {
      "types": "./dist/index-lite.d.ts",
      "import": "./dist/index-lite.mjs",
      "require": "./dist/index-lite.js"
    },
    "./react": {
      "types": "./dist/adapters/react.d.ts",
      "import": "./dist/adapters/react.mjs",
      "require": "./dist/adapters/react.js"
    },
    "./vue": {
      "types": "./dist/adapters/vue/index.d.ts",
      "import": "./dist/adapters/vue/index.mjs",
      "require": "./dist/adapters/vue/index.js"
    },
    "./svelte": {
      "types": "./dist/adapters/svelte/index.d.ts",
      "import": "./dist/adapters/svelte/index.mjs",
      "require": "./dist/adapters/svelte/index.js"
    },
    "./cursor": {
      "types": "./dist/cursor/index.d.ts",
      "import": "./dist/cursor/index.mjs",
      "require": "./dist/cursor/index.js"
    },
    "./cursor/selection": {
      "types": "./dist/cursor/selection.d.ts",
      "import": "./dist/cursor/selection.mjs",
      "require": "./dist/cursor/selection.js"
    },
    "./integrations/quill": {
      "types": "./dist/integrations/quill.d.ts",
      "import": "./dist/integrations/quill.mjs",
      "require": "./dist/integrations/quill.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/index-lite.ts src/adapters/react.tsx src/adapters/vue/index.ts src/adapters/svelte/index.ts src/cursor/index.ts src/cursor/selection.ts src/integrations/quill.ts --format cjs,esm --dts --clean && npm run copy-wasm && npm run copy-components",
    "copy-wasm": "npm run copy-wasm-variants && npm run copy-wasm-to-dist",
    "copy-components": "node scripts/copy-components.js",
    "copy-wasm-variants": "node scripts/copy-wasm-variants.js",
    "copy-wasm-to-dist": "node scripts/copy-wasm-to-dist.js",
    "dev": "tsup src/index.ts src/index-lite.ts src/adapters/react.tsx src/adapters/vue/index.ts src/adapters/svelte/index.ts src/cursor/index.ts src/cursor/selection.ts src/integrations/quill.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:chaos": "playwright test",
    "test:chaos:ui": "playwright test --ui",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sync",
    "crdt",
    "local-first",
    "real-time",
    "collaboration",
    "offline-first",
    "typescript",
    "wasm"
  ],
  "author": "Daniel Bitengo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dancode-188/synckit.git",
    "directory": "sdk"
  },
  "homepage": "https://github.com/Dancode-188/synckit#readme",
  "bugs": {
    "url": "https://github.com/Dancode-188/synckit/issues"
  },
  "files": [
    "dist",
    "wasm",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "svelte": ">=4.0.0 || >=5.0.0",
    "vue": ">=3.3.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "svelte": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/vue": "^8.1.0",
    "@types/lz-string": "^1.3.34",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@vitest/ui": "^1.0.0",
    "@vue/test-utils": "^2.4.6",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "react": "^18.2.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "svelte": "^5.45.8",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "vue": "^3.4.0"
  },
  "dependencies": {
    "lz-string": "^1.5.0"
  }
}
