{
  "name": "@synckit/server",
  "version": "0.1.0",
  "description": "SyncKit TypeScript Reference Server - Production-ready WebSocket sync server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:migrate": "bun src/storage/migrate.ts"
  },
  "keywords": ["synckit", "sync", "realtime", "websocket", "crdt", "local-first"],
  "author": "SyncKit Team",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.0.0",
    "ws": "^8.16.0",
    "@hono/node-server": "^1.8.0",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ws": "^8.5.10",
    "@types/pg": "^8.10.9",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
